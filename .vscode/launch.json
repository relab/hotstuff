	"version": "0.2.0",
	"configurations": [
		{
			"name": "Local Run",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "${workspaceRoot}/cmd/hotstuff/main.go",
			"cwd": "${workspaceRoot}",
			"args": [
				"run"
			]
		},
		{
			"name": "Deploy to Docker container",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "${workspaceRoot}/hotstuff-cli/main.go",
			"cwd": "${workspaceRoot}",
			"args": [
				"run",
				"--hosts=localhost",
				"--ssh-config=scripts/ssh_config.local",
				"--output=foo",
				"--cpu-profile"
			]
		},
		{
			"name": "Attach to Process",
			"type": "go",
			"request": "attach",
			"mode": "local",
			"processId": 0
		},
		{
			"name": "Launch file",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "${file}",
			"cwd": "${workspaceRoot}"
		},
		{
			"name": "Connect to server",
			"type": "go",
			"request": "attach",
			"mode": "remote",
			"remotePath": "${workspaceFolder}",
			"port": 2345,
			"host": "127.0.0.1"
		}
	]
}